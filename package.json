{
  "name": "@straw-hat/monorepo",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/**"
  ],
  "scripts": {
    "format": "prettier --write '**/*'",
    "format:check": "yarn format --check",
    "bootstrap": "lerna bootstrap",
    "start": "lerna run start",
    "build": "lerna run build",
    "test": "lerna run test",
    "deploy:packages": "node ./scripts/deployPackages.js"
  },
  "dependencies": {
    "@octokit/rest": "^16.34.1",
    "@types/debug": "^4.1.5",
    "conventional-changelog-cli": "^2.0.25",
    "conventional-recommended-bump": "^6.0.2",
    "eslint": "^6.7.1",
    "execa": "^3.2.0",
    "lerna": "^3.16.4",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0",
    "semver": "^6.3.0",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.4"
  },
  "devDependencies": {
    "@types/fscreen": "^1.0.1",
    "@types/jest": "^24.0.23",
    "@types/node": "^12.12.3",
    "@types/react": "^16.9.11",
    "@types/react-native": "^0.60.22",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0"
  },
  "prettier": "@straw-hat/prettier-config",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*": [
      "yarn format",
      "git add"
    ]
  }
}
