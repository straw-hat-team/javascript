{
  "name": "@straw-hat/design",
  "version": "0.1.1",
  "description": "A bunch of design utilities",
  "author": "Straw Hat Team <opensource@straw-hat-llc.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/straw-hat-team/javascript.git",
    "directory": "packages/libraries/design"
  },
  "license": "MIT",
  "keywords": [
    "design",
    "straw-hat-team"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prebuild": "yarn build:clean",
    "prepare": "yarn build",
    "build:clean": "shc lib:clean",
    "build:types": "tsc -p tsconfig.prod.json",
    "build:compile": "babel src --out-dir dist --extensions '.ts,.tsx,.js,.jsx' --source-maps",
    "build": "yarn build:compile",
    "postbuild": "yarn build:types",
    "start:types": "yarn build:types --watch",
    "start:compile": "yarn build:compile --watch",
    "start": "run-s start:*",
    "test": "shc test"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ]
}
