{
  "name": "@straw-hat/neutrino-graphql",
  "version": "2.0.0",
  "description": "Neutrino preset for adding GraphQL file support",
  "author": "Straw Hat Team <opensource@straw-hat-llc.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/straw-hat-team/javascript.git",
    "directory": "packages/libraries/neutrino-graphql"
  },
  "license": "MIT",
  "keywords": [
    "webpack-chain",
    "neutrino",
    "neutrino-preset",
    "graphql",
    "qql",
    "straw-hat-team"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prebuild": "yarn build:clean",
    "prepare": "yarn build",
    "build:clean": "rimraf dist",
    "build:types": "tsc -p tsconfig.prod.json",
    "build:compile": "babel src --out-dir dist --extensions '.ts,.tsx,.js,.jsx' --source-maps",
    "build": "yarn build:compile && yarn build:types",
    "start:types": "yarn build:types --watch",
    "start:compile": "yarn build:compile --watch",
    "start": "run-s start:*"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "peerDependencies": {
    "graphql-tag": "^2.9.2"
  }
}
